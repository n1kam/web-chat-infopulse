<center>
  <%=@error %>
  <%=form_for @chat_user, url: {action: 'create'},
            html: {class: 'FormClass'} do |f| %>
    <%=f.label "Имя"%>
    <%=f.text_field :name%><br>
    <%=f.label "Логин"%>
    <%=f.text_field :login%><br>
    <%=f.label "Пароль"%>
    <%=f.password_field :password%><br>
    <%=f.submit "Подтвердить"%>
  <%end%>
</center>